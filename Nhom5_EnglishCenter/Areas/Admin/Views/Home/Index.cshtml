@model TrungTamAnhNgu.Web.ViewModels.AdminDashboardStatsViewModel
@{
    ViewData["Title"] = "Tổng quan Hệ thống";
}

@* --- HÀNG 1: THỐNG KÊ CHÍNH --- *@
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">

    @* Card Doanh Thu *@
    <div class="bg-white rounded-xl shadow-sm p-6 border-l-4 border-green-500 flex items-center">
        <div class="p-3 bg-green-100 rounded-full text-green-600 mr-4">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
        </div>
        <div>
            <p class="text-sm text-gray-500 font-medium">Tổng Doanh thu</p>
            <p class="text-2xl font-bold text-gray-800">@Model.TotalRevenue.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</p>
        </div>
    </div>

    @* Card Học viên *@
    <div class="bg-white rounded-xl shadow-sm p-6 border-l-4 border-blue-500 flex items-center">
        <div class="p-3 bg-blue-100 rounded-full text-blue-600 mr-4">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path></svg>
        </div>
        <div>
            <p class="text-sm text-gray-500 font-medium">Học viên</p>
            <p class="text-2xl font-bold text-gray-800">@Model.TotalStudents</p>
        </div>
    </div>

    @* Card Giáo viên *@
    <div class="bg-white rounded-xl shadow-sm p-6 border-l-4 border-purple-500 flex items-center">
        <div class="p-3 bg-purple-100 rounded-full text-purple-600 mr-4">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
        </div>
        <div>
            <p class="text-sm text-gray-500 font-medium">Giáo viên</p>
            <p class="text-2xl font-bold text-gray-800">@Model.TotalTeachers</p>
        </div>
    </div>

    @* Card Lớp học *@
    <div class="bg-white rounded-xl shadow-sm p-6 border-l-4 border-orange-500 flex items-center">
        <div class="p-3 bg-orange-100 rounded-full text-orange-600 mr-4">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path></svg>
        </div>
        <div>
            <p class="text-sm text-gray-500 font-medium">Lớp đang mở</p>
            <p class="text-2xl font-bold text-gray-800">@Model.TotalClasses</p>
        </div>
    </div>
</div>

@* --- HÀNG 2: CẢNH BÁO (Nếu có) --- *@
@if (TempData["SuccessMessage"] != null)
{
    <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6 rounded shadow-sm flex items-center">
        <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
        @TempData["SuccessMessage"]
    </div>
}

@if (Model.AttentionClasses != null && Model.AttentionClasses.Any())
{
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden mb-8">
        <div class="bg-red-50 px-6 py-4 border-b border-red-100 flex items-center">
            <svg class="w-6 h-6 text-red-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path></svg>
            <h3 class="text-lg font-bold text-red-700">Cần chú ý: Lớp thiếu học viên</h3>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full bg-white">
                <thead class="bg-gray-50 text-gray-500 uppercase text-xs font-semibold">
                    <tr>
                        <th class="px-6 py-3 text-left">Tên lớp</th>
                        <th class="px-6 py-3 text-left">Khai giảng</th>
                        <th class="px-6 py-3 text-center">Sĩ số hiện tại</th>
                        <th class="px-6 py-3 text-center">Yêu cầu tối thiểu</th>
                        <th class="px-6 py-3 text-right">Hành động</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100 text-sm">
                    @foreach (var lop in Model.AttentionClasses)
                    {
                        <tr class="hover:bg-red-50 transition">
                            <td class="px-6 py-4 font-medium text-gray-900">@lop.ClassName</td>
                            <td class="px-6 py-4 text-gray-500">@lop.StartDate.ToString("dd/MM/yyyy")</td>
                            <td class="px-6 py-4 text-center font-bold text-red-600">@lop.Enrollments.Count</td>
                            <td class="px-6 py-4 text-center text-gray-500">@lop.MinStudents</td>
                            <td class="px-6 py-4 text-right">
                                <a asp-controller="Classes" asp-action="Edit" asp-route-id="@lop.Id"
                                   class="text-brand font-medium hover:underline">Xử lý ngay &rarr;</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}