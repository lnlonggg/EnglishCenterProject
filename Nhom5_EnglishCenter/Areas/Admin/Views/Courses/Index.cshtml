@model IEnumerable<TrungTamAnhNgu.Web.Models.Course>

@{
    ViewData["Title"] = "Quản lý Khóa học";
}

<div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-800">@ViewData["Title"]</h1>
    <a asp-action="Create" class="px-6 py-2 bg-brand-blue text-white rounded-lg shadow hover:bg-blue-700 transition duration-300">
        Tạo Khóa học mới
    </a>
</div>

<div class="bg-white shadow-md rounded-lg overflow-hidden">
    <table class="min-w-full bg-white">
        <thead class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
            <tr>
                <th class="py-3 px-6 text-left">@Html.DisplayNameFor(model => model.Title)</th>
                <th class="py-3 px-6 text-left">@Html.DisplayNameFor(model => model.Description)</th>
                <th class="py-3 px-6 text-left">@Html.DisplayNameFor(model => model.Price)</th>
                <th class="py-3 px-6 text-left">@Html.DisplayNameFor(model => model.DurationInHours)</th>
                <th class="py-3 px-6 text-right">Hành động</th>
            </tr>
        </thead>
        <tbody class="text-gray-600 text-sm font-light">
            @foreach (var item in Model)
            {
                <tr class="border-b border-gray-200 hover:bg-gray-100">
                    <td class="py-3 px-6 text-left whitespace-nowrap">
                        <span class="font-medium">@Html.DisplayFor(modelItem => item.Title)</span>
                    </td>
                    <td class="py-3 px-6 text-left max-w-xs truncate">
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td class="py-3 px-6 text-left">
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td class="py-3 px-6 text-left">
                        @Html.DisplayFor(modelItem => item.DurationInHours)
                    </td>
                    <td class="py-3 px-6 text-right">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="text-indigo-600 hover:text-indigo-900 px-2">Sửa</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="text-gray-600 hover:text-gray-900 px-2">Chi tiết</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="text-red-600 hover:text-red-900 px-2">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>