@model TrungTamAnhNgu.Web.Models.Course

@{
    ViewData["Title"] = "Xác nhận Xóa";
}

<h1 class="text-3xl font-bold text-gray-800 mb-6">@ViewData["Title"]</h1>
<h3 class="text-lg text-red-700 mb-4">Bạn có chắc chắn muốn xóa khóa học này?</h3>

<div class="bg-white shadow-md rounded-lg p-8 max-w-2xl">
    <h4 class="text-xl font-semibold text-brand-blue mb-4">@Model.Title</h4>
    <hr />
    <dl class="mt-6 space-y-4">
        <div class="grid grid-cols-3 gap-4">
            <dt class="text-sm font-medium text-gray-500">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="text-sm text-gray-900 col-span-2">
                @Html.DisplayFor(model => model.Description)
            </dd>
        </div>
        <div class="grid grid-cols-3 gap-4">
            <dt class="text-sm font-medium text-gray-500">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="text-sm text-gray-900 col-span-2">
                @Html.DisplayFor(model => model.Price)
            </dd>
        </div>
    </dl>

    <form asp-action="Delete" class="mt-6">
        <input type="hidden" asp-for="Id" />
        <div class="flex items-center space-x-4">
            <input type="submit" value="Xóa" class="px-6 py-2 bg-red-600 text-white rounded-lg shadow hover:bg-red-700 transition duration-300 cursor-pointer" />
            <a asp-action="Index" class="px-6 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition duration-300">Hủy</a>
        </div>
    </form>
</div>