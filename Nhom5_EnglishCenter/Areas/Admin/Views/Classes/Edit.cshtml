@model TrungTamAnhNgu.Web.ViewModels.ClassViewModel
@{
    ViewData["Title"] = "Chỉnh sửa Lớp học";
}

<h1 class="text-3xl font-bold text-gray-800 mb-6">@ViewData["Title"]</h1>

<div class="bg-white shadow-md rounded-lg p-8 max-w-4xl">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm mb-4" role="alert"></div>
        <input type="hidden" asp-for="Id" />

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-4">
            <div>
                <label asp-for="ClassName" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="ClassName" class="w-full rounded-md border-gray-300 shadow-sm focus:border-brand-blue focus:ring-brand-blue sm:text-sm" />
                <span asp-validation-for="ClassName" class="text-red-600 text-sm"></span>
            </div>
            <div>
                <label asp-for="CourseId" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <select asp-for="CourseId" class="w-full rounded-md border-gray-300 shadow-sm focus:border-brand-blue focus:ring-brand-blue sm:text-sm" asp-items="ViewBag.CourseId"></select>
            </div>
        </div>

        <div class="mb-4">
            <label asp-for="TeacherId" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <select asp-for="TeacherId" class="w-full rounded-md border-gray-300 shadow-sm focus:border-brand-blue focus:ring-brand-blue sm:text-sm" asp-items="ViewBag.TeacherId"></select>
        </div>

        <div class="mb-6 bg-blue-50 p-5 rounded-lg border border-blue-100">
            <label class="block text-sm font-bold text-brand-blue mb-3">Thời khóa biểu chi tiết</label>
            <input asp-for="Schedule" type="hidden" id="ScheduleInput" />
            <span asp-validation-for="Schedule" class="text-red-600 text-sm"></span>

            <div class="overflow-x-auto bg-white rounded border border-gray-200">
                <table class="min-w-full text-sm">
                    <thead>
                        <tr class="bg-gray-100 border-b">
                            <th class="p-2 text-center w-24 text-gray-500 font-medium border-r">Ca / Thứ</th>
                            @foreach (var day in new[] { "T2", "T3", "T4", "T5", "T6", "T7", "CN" })
                            {
                                <th class="p-2 text-center font-bold text-gray-700 border-r">@day</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var shifts = new Dictionary<int, string> { { 1, "08:00-10:00" }, { 2, "10:00-12:00" }, { 3, "13:30-15:30" }, { 4, "17:30-19:30" } };
                        }
                        @foreach (var shift in shifts)
                        {
                            <tr class="border-b last:border-0 hover:bg-gray-50">
                                <td class="p-2 text-center bg-gray-50 border-r">
                                    <span class="block font-bold text-brand-blue">Ca @shift.Key</span>
                                    <span class="text-xs text-gray-500">@shift.Value</span>
                                </td>
                                @foreach (var day in new[] { "T2", "T3", "T4", "T5", "T6", "T7", "CN" })
                                {
                                    <td class="p-2 text-center border-r cursor-pointer hover:bg-blue-100 transition"
                                        onclick="document.getElementById('cb_@day@shift.Key').click()">
                                        <input type="checkbox" id="cb_@day@shift.Key"
                                               data-day="@day" data-shift="@shift.Key"
                                               class="schedule-checkbox w-5 h-5 text-brand-blue rounded border-gray-300 focus:ring-brand-blue cursor-pointer"
                                               onclick="event.stopPropagation()" />
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="mt-3 text-sm">
                <span class="text-gray-500">Đang chọn: </span>
                <span id="schedulePreview" class="font-bold text-brand-blue">@Model.Schedule</span>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-4">
            <div>
                <label asp-for="StartDate" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="StartDate" class="w-full rounded-md border-gray-300 shadow-sm focus:border-brand-blue focus:ring-brand-blue sm:text-sm" />
            </div>
            <div>
                <label asp-for="EndDate" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="EndDate" class="w-full rounded-md border-gray-300 shadow-sm focus:border-brand-blue focus:ring-brand-blue sm:text-sm" />
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-4">
            <div>
                <label asp-for="MinStudents" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="MinStudents" type="number" class="w-full rounded-md border-gray-300 shadow-sm focus:border-brand-blue focus:ring-brand-blue sm:text-sm" />
            </div>
            <div>
                <label asp-for="MaxStudents" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="MaxStudents" type="number" class="w-full rounded-md border-gray-300 shadow-sm focus:border-brand-blue focus:ring-brand-blue sm:text-sm" />
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-4">
            <div>
                <label asp-for="Format" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <select asp-for="Format" asp-items="Html.GetEnumSelectList<TrungTamAnhNgu.Web.Models.ClassFormat>()" class="w-full rounded-md border-gray-300 shadow-sm focus:border-brand-blue focus:ring-brand-blue sm:text-sm"></select>
            </div>
            <div>
                <label asp-for="Status" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <select asp-for="Status" asp-items="Html.GetEnumSelectList<TrungTamAnhNgu.Web.Models.ClassStatus>()" class="w-full rounded-md border-gray-300 shadow-sm focus:border-brand-blue focus:ring-brand-blue sm:text-sm"></select>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <div>
                <label asp-for="Location" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Location" class="w-full rounded-md border-gray-300 shadow-sm focus:border-brand-blue focus:ring-brand-blue sm:text-sm" placeholder="VD: Phòng 101" />
            </div>
            <div>
                <label asp-for="MeetingUrl" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="MeetingUrl" class="w-full rounded-md border-gray-300 shadow-sm focus:border-brand-blue focus:ring-brand-blue sm:text-sm" placeholder="VD: zoom.us/..." />
            </div>
        </div>

        <div class="flex items-center space-x-4 pt-4 border-t">
            <input type="submit" value="Lưu thay đổi" class="px-6 py-2.5 bg-brand-blue text-white font-bold rounded-lg shadow hover:bg-blue-800 transition duration-300 cursor-pointer" />
            <a asp-action="Index" class="px-6 py-2.5 bg-gray-100 text-gray-700 font-medium rounded-lg hover:bg-gray-200 transition duration-300">Hủy bỏ</a>
        </div>
    </form>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const checkboxes = document.querySelectorAll('.schedule-checkbox');
        const input = document.getElementById('ScheduleInput');
        const preview = document.getElementById('schedulePreview');

        const initialSchedule = input.value;
        if (initialSchedule) {
            const parts = initialSchedule.split(';'); 
            parts.forEach(part => {
                part = part.trim();
                const dayMatch = part.match(/^(T\d|CN)/);
                if (dayMatch) {
                    const day = dayMatch[0];
                    const shiftMatches = part.matchAll(/Ca (\d)/g);
                    for (const match of shiftMatches) {
                        const shift = match[1];
                        const cb = document.getElementById(`cb_${day}${shift}`);
                        if (cb) cb.checked = true;
                    }
                }
            });
        }

        function updateSchedule() {
            let selection = {};
            checkboxes.forEach(cb => {
                if (cb.checked) {
                    let d = cb.getAttribute('data-day');
                    let s = cb.getAttribute('data-shift');
                    if (!selection[d]) selection[d] = [];
                    selection[d].push(s);
                }
            });

            let parts = [];
            const dayOrder = ["T2", "T3", "T4", "T5", "T6", "T7", "CN"];
            dayOrder.forEach(day => {
                if (selection[day]) {
                    let shifts = selection[day].sort((a, b) => a - b).map(s => "Ca " + s).join(", ");
                    parts.push(`${day} (${shifts})`);
                }
            });

            if (parts.length > 0) {
                let result = parts.join("; ");
                input.value = result;
                preview.textContent = result;
            } else {
                input.value = '';
                preview.textContent = 'Chưa chọn';
            }
        }

        checkboxes.forEach(cb => cb.addEventListener('change', updateSchedule));
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}