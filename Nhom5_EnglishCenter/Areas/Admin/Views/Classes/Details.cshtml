@model TrungTamAnhNgu.Web.Models.Class
@{
    ViewData["Title"] = "Chi tiết Lớp học";
}

<h1 class="text-3xl font-bold text-gray-800 mb-6">@ViewData["Title"]</h1>

<div class="bg-white shadow-md rounded-lg p-8 max-w-2xl">
    <h4 class="text-xl font-semibold text-brand-blue mb-4">@Model.ClassName</h4>
    <hr />
    <dl class="mt-6 space-y-4">
        <div class="grid grid-cols-3 gap-4">
            <dt class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.Course)</dt>
            <dd class="text-sm text-gray-900 col-span-2">@Html.DisplayFor(model => model.Course.Title)</dd>
        </div>
        <div class="grid grid-cols-3 gap-4">
            <dt class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.Teacher)</dt>
            <dd class="text-sm text-gray-900 col-span-2">@Html.DisplayFor(model => model.Teacher.ApplicationUser.FullName)</dd>
        </div>
        <div class="grid grid-cols-3 gap-4">
            <dt class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.Schedule)</dt>
            <dd class="text-sm text-gray-900 col-span-2">@Html.DisplayFor(model => model.Schedule)</dd>
        </div>
        <div class="grid grid-cols-3 gap-4">
            <dt class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.StartDate)</dt>
            <dd class="text-sm text-gray-900 col-span-2">@Html.DisplayFor(model => model.StartDate)</dd>
        </div>
        <div class="grid grid-cols-3 gap-4">
            <dt class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.EndDate)</dt>
            <dd class="text-sm text-gray-900 col-span-2">@Html.DisplayFor(model => model.EndDate)</dd>
        </div>
        <div class="grid grid-cols-3 gap-4">
            <dt class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.MaxStudents)</dt>
            <dd class="text-sm text-gray-900 col-span-2">@Html.DisplayFor(model => model.MaxStudents)</dd>
        </div>
        <div class="grid grid-cols-3 gap-4">
            <dt class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.Format)</dt>
            <dd class="text-sm text-gray-900 col-span-2">@Html.DisplayFor(model => model.Format)</dd>
        </div>
        <div class="grid grid-cols-3 gap-4">
            <dt class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.Location)</dt>
            <dd class="text-sm text-gray-900 col-span-2">@Html.DisplayFor(model => model.Location)</dd>
        </div>
        <div class="grid grid-cols-3 gap-4">
            <dt class="text-sm font-medium text-gray-500">@Html.DisplayNameFor(model => model.MeetingUrl)</dt>
            <dd class="text-sm text-gray-900 col-span-2">@Html.DisplayFor(model => model.MeetingUrl)</dd>
        </div>
    </dl>

    <div class="mt-6 flex items-center space-x-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="px-6 py-2 bg-brand-blue text-white rounded-lg shadow hover:bg-blue-700 transition duration-300">Sửa</a>
        <a asp-action="Index" class="px-6 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition duration-300">Quay lại Danh sách</a>
    </div>
</div>