@model TrungTamAnhNgu.Web.Models.Contact

@{
    ViewData["Title"] = "Chi tiết Tin nhắn";
}

<h1 class="text-3xl font-bold text-gray-800 mb-6">@ViewData["Title"]</h1>

<div class="bg-white shadow-md rounded-lg p-8 max-w-3xl">
    <div class="flex justify-between items-start border-b pb-4 mb-4">
        <div>
            <h4 class="text-xl font-bold text-brand-blue">@Model.Subject</h4>
            <p class="text-sm text-gray-500">Gửi lúc: @Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</p>
        </div>
        <div>
            @if (Model.IsRead)
            {
                <span class="bg-green-200 text-green-800 py-1 px-3 rounded-full text-xs">Đã xem</span>
            }
            else
            {
                <span class="bg-red-200 text-red-800 py-1 px-3 rounded-full text-xs">Mới</span>
            }
        </div>
    </div>

    <dl class="grid grid-cols-1 gap-y-4 sm:grid-cols-3 sm:gap-x-6">
        <div class="sm:col-span-1">
            <dt class="text-sm font-medium text-gray-500">Người gửi</dt>
            <dd class="mt-1 text-sm text-gray-900">@Model.FullName</dd>
        </div>
        <div class="sm:col-span-1">
            <dt class="text-sm font-medium text-gray-500">Email</dt>
            <dd class="mt-1 text-sm text-gray-900">@Model.Email</dd>
        </div>
        <div class="sm:col-span-1">
            <dt class="text-sm font-medium text-gray-500">Số điện thoại</dt>
            <dd class="mt-1 text-sm text-gray-900">@Model.PhoneNumber</dd>
        </div>

        <div class="sm:col-span-3 mt-4">
            <dt class="text-sm font-medium text-gray-500 mb-2">Nội dung lời nhắn</dt>
            <dd class="mt-1 text-sm text-gray-900 p-4 bg-gray-50 rounded-lg border border-gray-200">
                @Model.Message
            </dd>
        </div>
    </dl>

    <div class="mt-8 flex items-center space-x-4">
        <a asp-action="Index" class="px-6 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition duration-300">Quay lại Danh sách</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="px-6 py-2 bg-red-600 text-white rounded-lg shadow hover:bg-red-700 transition duration-300">Xóa tin nhắn</a>
    </div>
</div>