@model TrungTamAnhNgu.Web.Models.Contact

@{
    ViewData["Title"] = "Xóa Tin nhắn";
}

<h1 class="text-3xl font-bold text-gray-800 mb-6">@ViewData["Title"]</h1>

<div class="bg-white shadow-md rounded-lg p-8 max-w-2xl">

    <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6">
        <div class="flex">
            <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                </svg>
            </div>
            <div class="ml-3">
                <p class="text-sm text-red-700">
                    Bạn có chắc chắn muốn xóa tin nhắn này không? Hành động này không thể hoàn tác.
                </p>
            </div>
        </div>
    </div>

    <h4 class="text-xl font-semibold text-brand-blue mb-4">@Model.Subject</h4>
    <hr class="border-gray-200 mb-6" />

    <dl class="grid grid-cols-1 gap-y-4 sm:grid-cols-3 sm:gap-x-6">
        <div class="sm:col-span-1">
            <dt class="text-sm font-medium text-gray-500">Người gửi</dt>
            <dd class="mt-1 text-sm text-gray-900 font-medium">@Html.DisplayFor(model => model.FullName)</dd>
        </div>

        <div class="sm:col-span-1">
            <dt class="text-sm font-medium text-gray-500">Email</dt>
            <dd class="mt-1 text-sm text-gray-900">@Html.DisplayFor(model => model.Email)</dd>
        </div>

        <div class="sm:col-span-1">
            <dt class="text-sm font-medium text-gray-500">Số điện thoại</dt>
            <dd class="mt-1 text-sm text-gray-900">@Html.DisplayFor(model => model.PhoneNumber)</dd>
        </div>

        <div class="sm:col-span-3 mt-2">
            <dt class="text-sm font-medium text-gray-500 mb-1">Nội dung</dt>
            <dd class="text-sm text-gray-900 bg-gray-50 p-3 rounded border border-gray-200 italic">
                "@Html.DisplayFor(model => model.Message)"
            </dd>
        </div>

        <div class="sm:col-span-3">
            <dt class="text-sm font-medium text-gray-500">Ngày gửi</dt>
            <dd class="mt-1 text-sm text-gray-900">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm:ss")</dd>
        </div>
    </dl>

    <form asp-action="Delete" class="mt-8">
        <input type="hidden" asp-for="Id" />
        <div class="flex items-center space-x-4">
            <input type="submit" value="Xóa vĩnh viễn" class="px-6 py-2 bg-red-600 text-white rounded-lg shadow hover:bg-red-700 transition duration-300 cursor-pointer font-medium" />
            <a asp-action="Index" class="px-6 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition duration-300 font-medium">Hủy bỏ</a>
        </div>
    </form>
</div>