@page
@model RegisterModel
@{
    ViewData["Title"] = "Đăng ký";
}

<div class="container mx-auto px-6 py-16">
    <div class="max-w-md mx-auto bg-white p-8 rounded-lg shadow-xl border border-gray-100">

        <h1 class="text-2xl font-bold text-center text-brand-blue mb-6">@ViewData["Title"]</h1>

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 class="text-lg font-medium text-gray-900 mb-4 text-center">Tạo tài khoản mới</h2>
            <hr class="mb-6" />
            <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm mb-4" role="alert"></div>

            <div class="mb-4">
                <label asp-for="Input.FullName" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Input.FullName" class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-brand-blue focus:border-transparent transition duration-200" autocomplete="name" aria-required="true" placeholder="Nguyễn Văn A" />
                <span asp-validation-for="Input.FullName" class="text-red-600 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Input.Email" class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-brand-blue focus:border-transparent transition duration-200" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-red-600 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Input.Password" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Input.Password" class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-brand-blue focus:border-transparent transition duration-200" autocomplete="new-password" aria-required="true" placeholder="password" />
                <span asp-validation-for="Input.Password" class="text-red-600 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="Input.ConfirmPassword" class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-brand-blue focus:border-transparent transition duration-200" autocomplete="new-password" aria-required="true" placeholder="password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-red-600 text-sm"></span>
            </div>

            <button id="registerSubmit" type="submit"
                    class="w-full flex justify-center py-2.5 px-4 border border-transparent rounded-lg shadow-md text-sm font-bold text-brand-blue bg-brand-yellow hover:bg-yellow-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500 transition duration-300">
                Đăng ký
            </button>

            <div class="mt-6 text-center">
                <p class="text-sm text-gray-600">
                    Đã có tài khoản?
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="font-medium text-brand-blue hover:underline">
                        Đăng nhập ngay
                    </a>
                </p>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}