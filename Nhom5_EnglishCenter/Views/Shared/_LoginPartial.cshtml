@using Microsoft.AspNetCore.Identity
@using TrungTamAnhNgu.Web.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" class="text-gray-600 hover:text-brand-blue font-medium">
        Chào, @User.Identity.Name!
    </a>

    @if (User.IsInRole("Admin"))
    {
        <a asp-area="Admin" asp-controller="Courses" asp-action="Index" class="text-gray-600 hover:text-brand-blue font-medium">
            Trang Quản lý
        </a>
    }

    @if (User.IsInRole("Student"))
    {
        <a asp-area="" asp-controller="Dashboard" asp-action="Index" class="text-gray-600 hover:text-brand-blue font-medium">
            Khóa học của tôi
        </a>
    }

    <form class="inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button type="submit" class="text-gray-600 hover:text-brand-blue font-medium">Đăng xuất</button>
    </form>
}
else
{
    <a class="text-gray-600 hover:text-brand-blue font-medium" asp-area="Identity" asp-page="/Account/Register">Đăng ký</a>
    <a class="bg-brand-yellow text-brand-blue px-5 py-2 rounded-full font-bold shadow-md hover:bg-yellow-400 transition duration-300" asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a>
}