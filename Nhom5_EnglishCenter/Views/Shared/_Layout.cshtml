<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - E-Center</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <script type="application/javascript" src="https://unpkg.com/heroicons@2.1.3/24/outline/index.js"></script>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:wght@400;500;700&display=swap" rel="stylesheet">

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        'sans': ['Be Vietnam Pro', 'sans-serif'],
                    },
                    colors: {
                        'brand-blue': '#004A99',
                        'brand-yellow': '#FFD700',
                    }
                }
            }
        }
    </script>
    <style>
        body {
            font-family: 'Be Vietnam Pro', sans-serif;
        }
        /* Hiệu ứng trượt cho thông báo offline */
        #offline-notification {
            transition: transform 0.3s ease-in-out, opacity 0.3s ease-in-out;
        }

        .slide-in {
            transform: translateY(0);
            opacity: 1;
        }

        .slide-out {
            transform: translateY(100%);
            opacity: 0;
        }
    </style>
</head>
<body class="bg-gray-50 flex flex-col min-h-screen">

    <header class="bg-white shadow-sm sticky top-0 z-50">
        <nav class="container mx-auto px-6 py-4 flex justify-between items-center">
            <div>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="text-2xl font-bold text-brand-blue flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8 text-brand-yellow">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M4.26 10.147a60.438 60.438 0 0 0-.491 6.347A48.62 48.62 0 0 1 12 20.904a48.62 48.62 0 0 1 8.232-4.41 60.46 60.46 0 0 0-.491-6.347m-15.482 0a50.636 50.636 0 0 0-2.658-.813A59.906 59.906 0 0 1 12 3.493a59.903 59.903 0 0 1 10.399 5.84c-.896.248-1.783.52-2.658.814m-15.482 0A50.717 50.717 0 0 1 12 13.489a50.702 50.702 0 0 1 7.74-3.342M6.75 15a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5Zm0 0v-3.675A55.378 55.378 0 0 1 12 8.443m-7.007 11.55A5.981 5.981 0 0 0 6.75 15.75v-1.5" />
                    </svg>
                    <span>Trung Tâm Anh Ngữ Nhóm 5</span>
                </a>
            </div>
            <div class="hidden md:flex space-x-6 items-center">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="text-gray-600 hover:text-brand-blue font-medium">Trang chủ</a>
                <a asp-area="" asp-controller="Courses" asp-action="Index" class="text-gray-600 hover:text-brand-blue font-medium">Khóa học</a>
                <a asp-area="" asp-controller="Home" asp-action="Contact" class="text-gray-600 hover:text-brand-blue font-medium">Liên hệ & Tư vấn</a>

                <partial name="_LoginPartial" />
            </div>
            <div class="md:hidden">
                <button class="text-gray-600">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                    </svg>
                </button>
            </div>
        </nav>
    </header>

    <main role="main" class="flex-grow">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="container mx-auto px-6 mt-4">
                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
                    <span class="block sm:inline">@TempData["SuccessMessage"]</span>
                </div>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="container mx-auto px-6 mt-4">
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                    <span class="block sm:inline">@TempData["ErrorMessage"]</span>
                </div>
            </div>
        }

        @RenderBody()
    </main>
    <div id="offline-notification" class="fixed bottom-4 right-4 z-50 slide-out hidden">
        <div class="bg-red-600 text-white px-6 py-4 rounded-lg shadow-2xl flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636a9 9 0 010 12.728m0 0l-2.829-2.829m2.829 2.829L21 21M15.536 8.464a5 5 0 010 7.072m0 0l-2.829-2.829m-4.243 2.829a4.978 4.978 0 01-1.414-2.83m-1.414 5.658a9 9 0 01-2.167-9.238m7.824 2.167a1 1 0 111.414 1.414m-1.414-1.414L3 3m8.293 8.293l1.414 1.414" />
            </svg>
            <div>
                <h4 class="font-bold text-lg">Mất kết nối mạng!</h4>
                <p class="text-sm text-red-100">Vui lòng kiểm tra đường truyền internet.</p>
            </div>
        </div>
    </div>

    <footer class="bg-gray-800 text-gray-300 py-12 mt-auto">
        <div class="container mx-auto px-6 grid md:grid-cols-4 gap-8">
            <div>
                <h3 class="text-2xl font-bold text-white mb-4">Trung Tâm Anh Ngữ Nhóm 5</h3>
                <p class="mb-2">Lý Ngọc Long - 22103100235 (Trưởng nhóm)</p>
                <p class="mb-2">Nguyễn Hữu Lương - 22103100214</p>
                <p class="mb-2">Nguyễn Văn Diễm - 22103100217</p>
            </div>
            <div>
                <h4 class="text-lg font-semibold text-white mb-4">Khóa học</h4>
                <ul>
                    <li class="mb-2">
                        <a asp-controller="Courses" asp-action="Index" asp-route-searchString="IELTS"
                           class="hover:text-white transition-colors duration-200">
                            IELTS
                        </a>
                    </li>
                    <li class="mb-2">
                        <a asp-controller="Courses" asp-action="Index" asp-route-searchString="TOEIC"
                           class="hover:text-white transition-colors duration-200">
                            TOEIC
                        </a>
                    </li>
                    <li class="mb-2">
                        <a asp-controller="Courses" asp-action="Index" asp-route-searchString="Giao tiếp"
                           class="hover:text-white transition-colors duration-200">
                            Tiếng Anh Giao tiếp
                        </a>
                    </li>
                    <li class="mb-2">
                        <a asp-controller="Courses" asp-action="Index" asp-route-searchString="Doanh nghiệp"
                           class="hover:text-white transition-colors duration-200">
                            Tiếng Anh Doanh nghiệp
                        </a>
                    </li>
                </ul>
            </div>
            <div>
                <h4 class="text-lg font-semibold text-white mb-4">Công ty</h4>
                <ul>
                    <li class="mb-2"><a href="#" class="hover:text-white">Giới thiệu</a></li>
                    <li class="mb-2"><a href="#" class="hover:text-white">Tuyển dụng</a></li>
                </ul>
            </div>
            <div>
                <h4 class="text-lg font-semibold text-white mb-4">Kết nối</h4>
                <div class="flex space-x-4">
                    <a href="#" class="text-gray-300 hover:text-white">Facebook</a>
                    <a href="#" class="text-gray-300 hover:text-white">Youtube</a>
                </div>
            </div>
        </div>
        <div class="text-center text-gray-500 border-t border-gray-700 mt-8 pt-6">
            © 2025 E-Center. All rights reserved.
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        window.addEventListener('load', function() {
            var notification = document.getElementById('offline-notification');

            function updateOnlineStatus() {
                if (navigator.onLine) {
                    notification.classList.remove('slide-in');
                    notification.classList.add('slide-out');
                    setTimeout(() => notification.classList.add('hidden'), 300);
                } else {
                    notification.classList.remove('hidden');
                    setTimeout(() => {
                        notification.classList.remove('slide-out');
                        notification.classList.add('slide-in');
                    }, 10);
                }
            }

            window.addEventListener('online', updateOnlineStatus);
            window.addEventListener('offline', updateOnlineStatus);
            if (!navigator.onLine) {
                updateOnlineStatus();
            }
        });
    </script>
</body>
</html>