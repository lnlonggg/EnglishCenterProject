<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - E-Center</title>

    <!-- Tải Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Tải thư viện icon (Heroicons) - Sửa lỗi type của bạn -->
    <script type="application/javascript" src="https://unpkg.com/heroicons@2.1.3/24/outline/index.js"></script>

    <!-- Tải Font Be Vietnam Pro -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:wght@400;500;700&display=swap" rel="stylesheet">

    <!-- Config Tailwind -->
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        'sans': ['Be Vietnam Pro', 'sans-serif'],
                    },
                    colors: {
                        'brand-blue': '#004A99', // Xanh đậm thương hiệu
                        'brand-yellow': '#FFD700', // Vàng cho CTA
                    }
                }
            }
        }
    </script>

    <!-- Style tùy chỉnh (nếu cần) -->
    <style>
        body {
            font-family: 'Be Vietnam Pro', sans-serif;
        }
    </style>
</head>
<body class="bg-gray-50">

    <!-- Header & Navigation -->
    <header class="bg-white shadow-sm sticky top-0 z-50">
        <nav class="container mx-auto px-6 py-4 flex justify-between items-center">
            <div>
                <!-- Sử dụng Tag Helper asp-controller và asp-action để điều hướng an toàn -->
                <a asp-controller="Home" asp-action="Index" class="text-2xl font-bold text-brand-blue">E-Center</a>
            </div>
            <div class="hidden md:flex space-x-6 items-center">
                <a asp-controller="Home" asp-action="Index" class="text-gray-600 hover:text-brand-blue font-medium">Trang chủ</a>
                <a href="#" class="text-gray-600 hover:text-brand-blue font-medium">Khóa học</a>
                <a href="#" class="text-gray-600 hover:text-brand-blue font-medium">Giới thiệu</a>
                <a href="#" class="text-gray-600 hover:text-brand-blue font-medium">Liên hệ</a>
                <a href="#" class="bg-brand-yellow text-brand-blue px-5 py-2 rounded-full font-bold shadow-md hover:bg-yellow-400 transition duration-300">
                    Đăng ký ngay
                </a>
            </div>
            <!-- Mobile Menu Button -->
            <div class="md:hidden">
                <button class="text-gray-600">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                    </svg>
                </button>
            </div>
        </nav>
    </header>

    <!-- Vùng nội dung chính của trang sẽ được render ở đây -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-gray-800 text-gray-300 py-12">
        <div class="container mx-auto px-6 grid md:grid-cols-4 gap-8">
            <!-- Cột 1: Logo & Info -->
            <div>
                <h3 class="text-2xl font-bold text-white mb-4">E-Center</h3>
                <p class="mb-2">123 Đường ABC, Quận 1, TP. HCM</p>
                <p class="mb-2">contact@ecenter.edu.vn</p>
                <p>0901 234 567</p>
            </div>
            <!-- Cột 2: Khóa học -->
            <div>
                <h4 class="text-lg font-semibold text-white mb-4">Khóa học</h4>
                <ul>
                    <li class="mb-2"><a href="#" class="hover:text-white">IELTS</a></li>
                    <li class="mb-2"><a href="#" class="hover:text-white">TOEIC</a></li>
                    <li class="mb-2"><a href="#" class="hover:text-white">Tiếng Anh Giao tiếp</a></li>
                    <li class="mb-2"><a href="#" class="hover:text-white">Tiếng Anh Doanh nghiệp</a></li>
                </ul>
            </div>
            <!-- Cột 3: Về chúng tôi -->
            <div>
                <h4 class="text-lg font-semibold text-white mb-4">Công ty</h4>
                <ul>
                    <li class="mb-2"><a href="#" class="hover:text-white">Giới thiệu</a></li>
                    <li class="mb-2"><a href="#" class="hover:text-white">Đội ngũ giáo viên</a></li>
                    <li class="mb-2"><a href="#" class="hover:text-white">Tuyển dụng</a></li>
                </ul>
            </div>
            <!-- Cột 4: Mạng xã hội -->
            <div>
                <h4 class="text-lg font-semibold text-white mb-4">Kết nối với chúng tôi</h4>
                <div class="flex space-x-4">
                    <!-- Icons sẽ cần được thêm vào (ví dụ: SVGs hoặc FontAwesome) -->
                    <a href="#" class="text-gray-300 hover:text-white">Facebook</a>
                    <a href="#" class="text-gray-300 hover:text-white">Instagram</a>
                    <a href="#" class="text-gray-300 hover:text-white">Youtube</a>
                </div>
            </div>
        </div>
        <div class="text-center text-gray-500 border-t border-gray-700 mt-8 pt-6">
            © 2025 E-Center. All rights reserved.
        </div>
    </footer>

    <!-- RenderSectionAsync cho phép các trang con thêm script nếu cần -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
