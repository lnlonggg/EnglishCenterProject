@using TrungTamAnhNgu.Web.Models
@model IEnumerable<Course>

@{
    ViewData["Title"] = "Trang chủ";
}


<section class="bg-white">
    <div class="container mx-auto px-6 py-20 md:py-32 grid md:grid-cols-2 gap-12 items-center">
        <div class="text-center md:text-left">
            <h1 class="text-4xl md:text-5xl font-bold text-brand-blue leading-tight">
                Mở Khóa Tương Lai <br class="hidden md:inline"> Với Tiếng Anh
            </h1>
            <p class="mt-6 text-lg text-gray-700">
                Tham gia cùng hàng ngàn học viên, tự tin giao tiếp và đạt được mục tiêu của bạn với các khóa học chất lượng cao tại E-Center.
            </p>
            <div class="mt-8 space-x-4">
                <a asp-controller="Courses" asp-action="Index" class="bg-brand-blue text-white px-8 py-3 rounded-full font-bold text-lg shadow-lg hover:bg-blue-800 transition duration-300">
                    Khám phá Khóa học
                </a>
                <a asp-controller="Home" asp-action="Contact" asp-route-subject="Tư vấn lộ trình"
                   class="text-brand-blue font-bold text-lg hover:underline">
                    Tư vấn miễn phí
                </a>
            </div>
        </div>
        <div>
            <img src="https://placehold.co/600x400/004A99/FFFFFF?text=Lop+Hoc+Hien+Dai" alt="Lớp học hiện đại" class="rounded-lg shadow-2xl w-full">
        </div>
    </div>
</section>

<section class="py-20 bg-gray-50">
    <div class="container mx-auto px-6">
        <h2 class="text-3xl font-bold text-center text-gray-800 mb-12">
            Tại sao chọn E-Center?
        </h2>
        <div class="grid md:grid-cols-3 gap-8">
            <div class="bg-white p-8 rounded-lg shadow-lg text-center">
                <div class="flex justify-center mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 text-brand-blue">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 0 0 8.716-6.747M12 21a9.004 9.004 0 0 1-8.716-6.747M12 21c.24 0 .468.02.69.058M12 21c-.24 0-.468.02-.69.058m1.38 0-1.38 0m-1.38 0-1.38 0m0 0a9.004 9.004 0 0 1-8.056-6.68m17.402 0a9.004 9.004 0 0 0-8.056-6.68m0 0c.24 0 .468.02.69.058m0 0c-.24 0-.468.02-.69.058m0 0a9.004 9.004 0 0 0-1.002-3.11m11.102 3.11a9.004 9.004 0 0 1-1.002-3.11m0 0c.24 0 .468.02.69.058M12 21c-.24 0-.468.02-.69.058" />
                    </svg>
                </div>
                <h3 class="text-xl font-bold text-gray-800 mb-2">Giáo viên Bản ngữ</h3>
                <p class="text-gray-600">Học hỏi từ các giáo viên giàu kinh nghiệm với phát âm chuẩn quốc tế.</p>
            </div>
            <div class="bg-white p-8 rounded-lg shadow-lg text-center">
                <div class="flex justify-center mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 text-brand-blue">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 1 0-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 0 0 2.25-2.25v-6.75a2.25 2.25 0 0 0-2.25-2.25H6.75a2.25 2.25 0 0 0-2.25 2.25v6.75a2.25 2.25 0 0 0 2.25 2.25Z" />
                    </svg>
                </div>
                <h3 class="text-xl font-bold text-gray-800 mb-2">Lộ trình Cá nhân hóa</h3>
                <p class="text-gray-600">Thiết kế lộ trình học tập riêng biệt phù hợp với mục tiêu và trình độ của bạn.</p>
            </div>
            <div class="bg-white p-8 rounded-lg shadow-lg text-center">
                <div class="flex justify-center mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 text-brand-blue">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M4.26 10.147a60.438 60.438 0 0 0-.491 6.347A48.62 48.62 0 0 1 12 20.904a48.62 48.62 0 0 1 8.232-4.41 60.46 60.46 0 0 0-.491-6.347m-15.482 0a50.636 50.636 0 0 0-2.658-.813A59.906 59.906 0 0 1 12 3.493a59.903 59.903 0 0 1 10.399 5.84c-.896.248-1.783.52-2.658.814m-15.482 0A50.717 50.717 0 0 1 12 13.489a50.702 50.702 0 0 1 7.74-3.342M6.75 15a.75.75 0 1 0 0-1.5.75.75 0 0 0 0 1.5Zm0 0v-3.675A55.378 55.378 0 0 1 12 8.443m-7.007 11.55A5.981 5.981 0 0 0 6.75 15.75v-1.s" />
                    </svg>
                </div>
                <h3 class="text-xl font-bold text-gray-800 mb-2">Chứng chỉ Quốc tế</h3>
                <p class="text-gray-600">Đảm bảo đầu ra với các chứng chỉ được công nhận toàn cầu (IELTS, TOEIC...).</p>
            </div>
        </div>
    </div>
</section>

<section class="py-20 bg-white">
    <div class="container mx-auto px-6">
        <h2 class="text-3xl font-bold text-center text-gray-800 mb-12">
            Các khóa học Nổi bật
        </h2>

       
        <div class="grid md:grid-cols-3 gap-8">

           
            @if (Model != null && Model.Any())
            {
                @foreach (var course in Model)
                {
                    <div class="bg-gray-50 rounded-lg shadow-lg overflow-hidden">
                        <img src="@course.ImageUrl" alt="Ảnh bìa khóa học @course.Title" class="w-full h-48 object-cover">
                        <div class="p-6">
                            <h3 class="text-xl font-bold text-brand-blue mb-2">@course.Title</h3>

                            @if (!string.IsNullOrEmpty(course.Description))
                            {
                                <p class="text-gray-600 mb-4">@course.Description.Substring(0, Math.Min(course.Description.Length, 100))...</p>
                            }
                            else
                            {
                                <p class="text-gray-600 mb-4">Chưa có mô tả cho khóa học này.</p>
                            }
                            <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id" class="font-medium text-brand-blue hover:text-blue-700">
                                Xem chi tiết &rarr;
                            </a>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-center col-span-3 text-gray-600">Hiện chưa có khóa học nổi bật nào.</p>
            }

        </div>
    </div>
</section>

<section class="bg-brand-blue">
    <div class="container mx-auto px-6 py-16 text-center">
        <h2 class="text-3xl font-bold text-white mb-4">
            Sẵn sàng để Bắt đầu?
        </h2>
        <p class="text-lg text-gray-200 mb-8">
            Đăng ký kiểm tra trình độ miễn phí ngay hôm nay để nhận lộ trình học tập cho riêng bạn.
        </p>
        <a asp-controller="Home" asp-action="Contact" asp-route-subject="Kiểm tra trình độ"
           class="bg-brand-yellow text-brand-blue px-8 py-3 rounded-full font-bold text-lg shadow-lg hover:bg-yellow-400 transition duration-300">
            Đăng ký Kiểm tra Trình độ
        </a>
    </div>
</section>