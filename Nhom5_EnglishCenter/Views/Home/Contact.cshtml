@model TrungTamAnhNgu.Web.ViewModels.ContactViewModel
@{
    ViewData["Title"] = "Liên hệ & Tư vấn";
}

<div class="bg-white py-16">
    <div class="container mx-auto px-6">
        <div class="max-w-2xl mx-auto bg-white p-8 rounded-lg shadow-xl border border-gray-100">

            <h1 class="text-3xl font-bold text-center text-brand-blue mb-4">Đăng ký Tư vấn & Kiểm tra</h1>
            <p class="text-center text-gray-600 mb-8">
                Để lại thông tin, chúng tôi sẽ liên hệ để xếp lịch kiểm tra trình độ hoặc tư vấn lộ trình học phù hợp nhất cho bạn.
            </p>

            <form asp-action="Contact" method="post">
                <div class="grid grid-cols-1 gap-6">

                    @* Họ tên *@
                    <div>
                        <label asp-for="FullName" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <input asp-for="FullName" class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-brand-blue focus:border-transparent" placeholder="Nguyễn Văn A" />
                        <span asp-validation-for="FullName" class="text-red-500 text-sm"></span>
                    </div>

                    @* Email & SĐT *@
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1"></label>
                            <input asp-for="Email" class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-brand-blue focus:border-transparent" placeholder="email@example.com" />
                            <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                        </div>
                        <div>
                            <label asp-for="PhoneNumber" class="block text-sm font-medium text-gray-700 mb-1"></label>
                            <input asp-for="PhoneNumber" class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-brand-blue focus:border-transparent" placeholder="0901..." />
                            <span asp-validation-for="PhoneNumber" class="text-red-500 text-sm"></span>
                        </div>
                    </div>

                    @* Nhu cầu (Dropdown các câu hỏi có sẵn) *@
                    <div>
                        <label asp-for="Subject" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <select asp-for="Subject" class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-brand-blue focus:border-transparent">
                            <option value="">-- Chọn nhu cầu của bạn --</option>
                            <option value="Kiểm tra trình độ">Đăng ký Kiểm tra trình độ (Miễn phí)</option>
                            <option value="Tư vấn lộ trình">Tư vấn lộ trình học từ đầu</option>
                            <option value="Luyện thi IELTS">Tư vấn khóa luyện thi IELTS</option>
                            <option value="Luyện thi TOEIC">Tư vấn khóa luyện thi TOEIC</option>
                            <option value="Tiếng Anh Giao tiếp">Tư vấn Tiếng Anh Giao tiếp</option>
                            <option value="Khác">Khác</option>
                        </select>
                        <span asp-validation-for="Subject" class="text-red-500 text-sm"></span>
                    </div>

                    @* Lời nhắn *@
                    <div>
                        <label asp-for="Message" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <textarea asp-for="Message" rows="4" class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-brand-blue focus:border-transparent" placeholder="Bạn có câu hỏi nào khác không?"></textarea>
                    </div>

                    @* Nút Gửi *@
                    <div class="text-center mt-4">
                        <button type="submit" class="px-8 py-3 bg-brand-yellow text-brand-blue font-bold rounded-full shadow-lg hover:bg-yellow-400 transition duration-300">
                            Gửi Đăng ký ngay
                        </button>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}