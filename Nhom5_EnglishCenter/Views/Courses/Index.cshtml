@model IEnumerable<TrungTamAnhNgu.Web.Models.Course>
@{
    ViewData["Title"] = "Danh mục Khóa học";
    Layout = "_StudentLayout"; // Giữ layout có sidebar
}

<div class="bg-white p-8 rounded-lg shadow-sm border border-gray-100">

    <div class="flex flex-col md:flex-row justify-between items-center mb-8">
        <h1 class="text-3xl font-bold text-brand-blue mb-4 md:mb-0">
            Tất cả Khóa học
        </h1>

        <form asp-action="Index" method="get" class="w-full md:w-1/2">
            <div class="relative">
                <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                    <svg aria-hidden="true" class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
                </div>
                <input type="text" name="searchString" value="@ViewData["CurrentFilter"]"
                       class="block w-full p-4 pl-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-brand-blue focus:border-brand-blue"
                       placeholder="Tìm kiếm khóa học (IELTS, TOEIC...)" />
                <button type="submit" class="text-white absolute right-2.5 bottom-2.5 bg-brand-blue hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2">
                    Tìm kiếm
                </button>
            </div>
        </form>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        @if (Model != null && Model.Any())
        {
            @foreach (var course in Model)
            {
                <div class="bg-gray-50 rounded-lg shadow-lg overflow-hidden flex flex-col h-full border border-gray-200 hover:shadow-xl transition duration-300">
                    <div class="h-48 overflow-hidden relative">
                        <img src="@(string.IsNullOrEmpty(course.ImageUrl) ? "/images/default-course.png" : course.ImageUrl)"
                             alt="@course.Title"
                             class="w-full h-full object-cover hover:scale-105 transition duration-500"
                             onerror="this.src='https://placehold.co/400x250/E2E8F0/4A5568?text=No+Image'">

                        @if (!string.IsNullOrEmpty(course.Category))
                        {
                            <span class="absolute top-2 right-2 bg-brand-yellow text-brand-blue text-xs font-bold px-2 py-1 rounded shadow">
                                @course.Category
                            </span>
                        }
                    </div>

                    <div class="p-6 flex flex-col flex-grow">
                        <h3 class="text-xl font-bold text-brand-blue mb-2 line-clamp-2">@course.Title</h3>

                        @if (!string.IsNullOrEmpty(course.Description))
                        {
                            <p class="text-gray-600 mb-4 flex-grow line-clamp-3 text-sm">
                                @course.Description
                            </p>
                        }
                        else
                        {
                            <p class="text-gray-400 mb-4 flex-grow italic text-sm">Chưa có mô tả.</p>
                        }

                        <div class="mt-auto pt-4 border-t border-gray-200 flex justify-between items-center">
                            <span class="text-lg font-bold text-gray-800">@course.Price.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</span>
                            <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id"
                               class="text-sm font-bold text-brand-blue hover:text-blue-800 hover:underline flex items-center">
                                Chi tiết &rarr;
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-span-3 text-center py-12">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-gray-300 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <p class="text-gray-500 text-lg">Không tìm thấy khóa học nào phù hợp với từ khóa "@ViewData["CurrentFilter"]".</p>
                <a asp-action="Index" class="text-brand-blue font-medium hover:underline mt-2 inline-block">Xem tất cả khóa học</a>
            </div>
        }
    </div>
</div>