@model TrungTamAnhNgu.Web.Models.Course
@inject SignInManager<ApplicationUser> SignInManager
@{
    ViewData["Title"] = Model.Title;
}

<div class="bg-white">
    <div class="container mx-auto px-6 py-16">

        <div class="grid md:grid-cols-3 gap-12">

            <div class="md:col-span-2">
                <h1 class="text-4xl font-bold text-brand-blue mb-4">
                    @Model.Title
                </h1>
                <p class="text-lg text-gray-700 mb-6">
                    @Model.Description
                </p>

                <div class="flex space-x-8 mb-8 text-gray-800">
                    <div>
                        <span class="font-bold">Học phí:</span>
                        <span>@Model.Price.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</span>
                    </div>
                    <div>
                        <span class="font-bold">Thời lượng:</span>
                        <span>@Model.DurationInHours giờ</span>
                    </div>
                </div>

                <h2 class="text-2xl font-bold text-gray-800 mb-6">Các lớp học sắp khai giảng</h2>

                <div class="overflow-x-auto shadow-md rounded-lg border border-gray-200">
                    <table class="min-w-full bg-white table-auto">
                        <thead class="bg-gray-100 text-gray-600 uppercase text-xs font-semibold leading-normal">
                            <tr>
                                <th class="py-3 px-4 text-left w-1/4">Tên lớp</th>
                                <th class="py-3 px-4 text-left w-1/5">Lịch học</th>
                                <th class="py-3 px-4 text-center w-1/6">Hình thức</th>
                                <th class="py-3 px-4 text-left w-1/5">Giáo viên</th>
                                <th class="py-3 px-4 text-center w-1/6">Đăng ký</th>
                            </tr>
                        </thead>
                        <tbody class="text-gray-600 text-sm font-light">
                            @foreach (var lop in Model.Classes.OrderBy(c => c.StartDate))
                            {
                                <tr class="border-b border-gray-200 hover:bg-gray-50 transition duration-150">
                                    <td class="py-4 px-4 text-left align-top">
                                        <div class="font-bold text-gray-800">@lop.ClassName</div>
                                        <div class="text-xs text-gray-500 mt-1">
                                            Khai giảng: <span class="font-medium">@lop.StartDate.ToString("dd/MM/yyyy")</span>
                                        </div>
                                    </td>
                                    <td class="py-4 px-4 text-left align-top">
                                        <div class="whitespace-pre-line">@lop.Schedule</div>
                                    </td>

                                    <td class="py-4 px-4 text-center align-top">
                                        @* LOGIC HIỂN THỊ NÚT ĐĂNG KÝ DỰA TRÊN TRẠNG THÁI *@

                                        @if (lop.Status == TrungTamAnhNgu.Web.Models.ClassStatus.Open)
                                        {
                                            // TRƯỜNG HỢP 1: ĐANG TUYỂN SINH (Hiện nút Đăng ký)
                                            if (SignInManager.IsSignedIn(User))
                                            {
                                                if (User.IsInRole("Student"))
                                                {
                                                    <form asp-controller="Enrollment" asp-action="Enroll" method="post" class="w-full">
                                                        <input type="hidden" name="classId" value="@lop.Id" />
                                                        <button type="submit" class="bg-brand-yellow text-brand-blue px-3 py-2 rounded-lg font-bold shadow-sm hover:bg-yellow-400 text-xs w-full transition-colors duration-200">
                                                            Đăng ký ngay
                                                        </button>
                                                    </form>
                                                }
                                                else
                                                {
                                                    <span class="inline-block bg-gray-100 text-gray-500 px-3 py-2 rounded-lg text-xs w-full text-center cursor-not-allowed border border-gray-200">
                                                        Dành cho Học viên
                                                    </span>
                                                }
                                            }
                                            else
                                            {
                                                <a asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Url.Action("Details", "Courses", new { id = Model.Id })"
                                                   class="inline-block bg-gray-200 text-gray-700 px-3 py-2 rounded-lg font-medium hover:bg-gray-300 hover:text-gray-900 transition-colors duration-200 text-xs w-full text-center border border-gray-300">
                                                    Đăng nhập để ĐK
                                                </a>
                                            }
                                        }
                                        else if (lop.Status == TrungTamAnhNgu.Web.Models.ClassStatus.Planned)
                                        {
                                            // TRƯỜNG HỢP 2: DỰ KIẾN (Sắp mở)
                                            <span class="inline-block bg-blue-50 text-blue-600 px-3 py-2 rounded-lg text-xs w-full text-center font-medium border border-blue-100">
                                                Sắp mở
                                            </span>
                                        }
                                        else if (lop.Status == TrungTamAnhNgu.Web.Models.ClassStatus.Active)
                                        {
                                            // TRƯỜNG HỢP 3: ĐANG HỌC (Khóa sổ)
                                            <span class="inline-block bg-green-50 text-green-600 px-3 py-2 rounded-lg text-xs w-full text-center font-medium border border-green-100">
                                                Đang học
                                            </span>
                                        }
                                        else
                                        {
                                            // TRƯỜNG HỢP 4: ĐÃ KẾT THÚC / HỦY
                                            <span class="inline-block bg-gray-100 text-gray-400 px-3 py-2 rounded-lg text-xs w-full text-center font-medium border border-gray-200 cursor-not-allowed">
                                                Đã đóng
                                            </span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>

            <div class="md:col-span-1">
                <img src="@Model.ImageUrl" alt="Ảnh bìa khóa học @Model.Title" class="w-full h-auto object-cover rounded-lg shadow-lg">
            </div>

        </div>
    </div>
</div>