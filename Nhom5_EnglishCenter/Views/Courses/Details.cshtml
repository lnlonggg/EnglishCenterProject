@model TrungTamAnhNgu.Web.Models.Course
@inject SignInManager<ApplicationUser> SignInManager
@{
    ViewData["Title"] = Model.Title;
}

<div class="bg-white">
    <div class="container mx-auto px-6 py-16">

        <div class="grid md:grid-cols-3 gap-12">

            <div class="md:col-span-2">
                <h1 class="text-4xl font-bold text-brand-blue mb-4">
                    @Model.Title
                </h1>
                <p class="text-lg text-gray-700 mb-6">
                    @Model.Description
                </p>

                <div class="flex space-x-8 mb-8 text-gray-800">
                    <div>
                        <span class="font-bold">Học phí:</span>
                        <span>@Model.Price.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</span>
                    </div>
                    <div>
                        <span class="font-bold">Thời lượng:</span>
                        <span>@Model.DurationInHours giờ</span>
                    </div>
                </div>

                <h2 class="text-2xl font-bold text-gray-800 mb-6">Các lớp học sắp khai giảng</h2>

                <div class="overflow-x-auto shadow-md rounded-lg">
                    <table class="min-w-full bg-white">
                        <thead class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
                            <tr>
                                <th class="py-3 px-6 text-left">Tên lớp</th>
                                <th class="py-3 px-6 text-left">Lịch học</th>
                                <th class="py-3 px-6 text-left">Hình thức</th>
                                <th class="py-3 px-6 text-left">Giáo viên</th>
                                <th class="py-3 px-6 text-center">Đăng ký</th>
                            </tr>
                        </thead>
                        <tbody class="text-gray-600 text-sm font-light">
                            @foreach (var lop in Model.Classes.OrderBy(c => c.StartDate))
                            {
                                <tr class="border-b border-gray-200 hover:bg-gray-100">
                                    <td class="py-3 px-6 text-left whitespace-nowrap">
                                        <span class="font-medium">@lop.ClassName</span>
                                        <span class="block text-xs text-gray-500">Khai giảng: @lop.StartDate.ToString("dd/MM/yyyy")</span>
                                    </td>
                                    <td class="py-3 px-6 text-left">
                                        @lop.Schedule
                                    </td>
                                    <td class="py-3 px-6 text-left">
                                        @if (lop.Format == TrungTamAnhNgu.Web.Models.ClassFormat.Offline)
                                        {
                                            <span class="bg-blue-200 text-blue-800 py-1 px-3 rounded-full text-xs">Offline</span>
                                            <span class="block text-xs text-gray-500">@lop.Location</span>
                                        }
                                        else
                                        {
                                            <span class="bg-green-200 text-green-800 py-1 px-3 rounded-full text-xs">Online</span>
                                        }
                                    </td>
                                    <td class="py-3 px-6 text-left">
                                        @lop.Teacher.ApplicationUser.FullName
                                    </td>
                                    <td class="py-3 px-6 text-center">
                                        @if (SignInManager.IsSignedIn(User))
                                        {
                                            <form asp-controller="Enrollment" asp-action="Enroll" method="post">
                                                <input type="hidden" name="classId" value="@lop.Id" />
                                                <button type="submit"
                                                        class="bg-brand-yellow text-brand-blue px-4 py-2 rounded-full font-bold shadow-md hover:bg-yellow-400 transition duration-300 text-xs">
                                                    Đăng ký ngay
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <a asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Url.Action("Details", "Courses", new { id = Model.Id })"
                                               class="bg-gray-300 text-gray-700 px-4 py-2 rounded-full font-bold shadow-md hover:bg-gray-400 transition duration-300 text-xs">
                                                Đăng nhập để đăng ký
                                            </a>
                                        }   
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>

            <div class="md:col-span-1">
                <img src="@Model.ImageUrl" alt="Ảnh bìa khóa học @Model.Title" class="w-full h-auto object-cover rounded-lg shadow-lg">
            </div>

        </div>
    </div>
</div>