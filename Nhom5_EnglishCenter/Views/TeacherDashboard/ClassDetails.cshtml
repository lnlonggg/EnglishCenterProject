@model TrungTamAnhNgu.Web.Models.Class
@{
    ViewData["Title"] = "Chi tiết Lớp học";
}

<div class="bg-white py-24">
    <div class="container mx-auto px-6">

        <h1 class="text-3xl font-bold text-brand-blue mb-2">@Model.Course.Title</h1>
        <h2 class="text-2xl font-semibold text-gray-700 mb-8">Lớp: @Model.ClassName</h2>

        <h3 class="text-xl font-bold text-gray-800 mb-6">Danh sách Sinh viên</h3>

        <div class="overflow-x-auto shadow-md rounded-lg">
            <table class="min-w-full bg-white">
                <thead class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
                    <tr>
                        <th class="py-3 px-6 text-left">Tên Sinh viên</th>
                        <th class="py-3 px-6 text-left">Email</th>
                        <th class="py-3 px-6 text-left">Ngày đăng ký</th>
                        <th class="py-3 px-6 text-center">Điểm (0-10)</th>
                        <th class="py-3 px-6 text-center">Hành động</th>
                    </tr>
                </thead>
                <tbody class="text-gray-600 text-sm font-light">
                    @foreach (var enrollment in Model.Enrollments)
                    {
                        <tr class="border-b border-gray-200 hover:bg-gray-100">
                            <td class="py-3 px-6 text-left whitespace-nowrap">
                                <span class="font-medium">@enrollment.Student.ApplicationUser.FullName</span>
                            </td>
                            <td class="py-3 px-6 text-left">
                                @enrollment.Student.ApplicationUser.Email
                            </td>
                            <td class="py-3 px-6 text-left">
                                @enrollment.EnrollmentDate.ToString("dd/MM/yyyy")
                            </td>

                            <form asp-action="UpdateGrade" method="post">
                                <input type="hidden" name="enrollmentId" value="@enrollment.Id" />
                                @Html.AntiForgeryToken()
                            <td class="py-3 px-6 text-center">
                                <input type="number" name="finalGrade" value="@enrollment.FinalGrade"
                                       step="0.1" min="0" max="10"
                                       class="w-20 rounded-md border-gray-300 shadow-sm focus:border-brand-blue focus:ring-brand-blue sm:text-sm" />
                            </td>
                            <td class="py-3 px-6 text-center">
                                <button type="submit"
                                        class="px-4 py-1 bg-brand-blue text-white rounded-lg shadow hover:bg-blue-700 transition duration-300 text-xs font-medium">
                                    Lưu điểm
                                </button>
                            </td>
                            </form>

                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-8">
            <a asp-action="Index" class="px-6 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition duration-300">
                &larr; Quay lại Lịch dạy
            </a>
        </div>
    </div>
</div>