@model TrungTamAnhNgu.Web.Models.Class
@{
    ViewData["Title"] = "Chi tiết Lớp học";
}

<div class="bg-white py-12">
    <div class="container mx-auto px-6">

        @* --- Header --- *@
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-brand-blue mb-2">@Model.Course.Title</h1>
            <h2 class="text-xl font-semibold text-gray-600">Lớp: <span class="text-gray-900">@Model.ClassName</span></h2>
        </div>

        @* --- Thông báo (nếu có) --- *@
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-6 rounded shadow-sm">
                @TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded shadow-sm">
                @TempData["ErrorMessage"]
            </div>
        }

        @* --- Bảng Danh sách Sinh viên --- *@
        <div class="bg-white shadow-md rounded-lg overflow-hidden border border-gray-200">
            <div class="px-6 py-4 border-b border-gray-200 bg-gray-50 flex justify-between items-center">
                <h3 class="font-bold text-gray-700">Danh sách Sinh viên (@Model.Enrollments.Count)</h3>
            </div>

            <table class="min-w-full text-sm text-left">
                <thead class="bg-gray-100 text-gray-600 uppercase font-semibold">
                    <tr>
                        <th class="py-3 px-6">Họ và Tên</th>
                        <th class="py-3 px-6">Email</th>
                        <th class="py-3 px-6">Ngày đăng ký</th>
                        <th class="py-3 px-6 text-center">Điểm Tổng kết</th>
                        <th class="py-3 px-6 text-center">Tác vụ</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                    @foreach (var enrollment in Model.Enrollments)
                    {
                        <tr class="hover:bg-blue-50 transition duration-150">
                            <td class="py-4 px-6 font-medium text-gray-900">
                                @enrollment.Student.ApplicationUser.FullName
                            </td>
                            <td class="py-4 px-6 text-gray-600">
                                @enrollment.Student.ApplicationUser.Email
                            </td>
                            <td class="py-4 px-6 text-gray-500">
                                @enrollment.EnrollmentDate.ToString("dd/MM/yyyy")
                            </td>

                            @* Cột Hiển thị Điểm *@
                            <td class="py-4 px-6 text-center">
                                @if (enrollment.FinalGrade.HasValue)
                                {
                                    <span class="inline-block px-3 py-1 rounded-full font-bold text-sm @(enrollment.FinalGrade >= 5 ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800")">
                                        @enrollment.FinalGrade.Value.ToString("0.0")
                                    </span>
                                }
                                else
                                {
                                    <span class="text-gray-400 italic">--</span>
                                }
                            </td>

                            @* Cột Nút Bấm (Mở Modal) *@
                            <td class="py-4 px-6 text-center">
                                <button type="button"
                                        onclick="openGradeModal('@enrollment.Id', '@enrollment.Student.ApplicationUser.FullName', '@(enrollment.FinalGrade?.ToString(System.Globalization.CultureInfo.InvariantCulture) ?? "")')"
                                        class="text-brand-blue hover:text-white border border-brand-blue hover:bg-brand-blue font-medium rounded-lg text-xs px-3 py-1.5 text-center transition duration-200">
                                    @(enrollment.FinalGrade.HasValue ? "Sửa điểm" : "Nhập điểm")
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-8">
            <a asp-action="Index" class="text-gray-600 hover:text-brand-blue font-medium flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" /></svg>
                Quay lại Lịch dạy
            </a>
        </div>
    </div>
</div>

@* --- MODAL (Cửa sổ nhập điểm) --- *@
<div id="gradeModal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-modal md:h-full bg-black bg-opacity-50 backdrop-blur-sm flex">
    <div class="relative p-4 w-full max-w-md h-full md:h-auto">
        <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
            <button type="button" onclick="closeGradeModal()" class="absolute top-3 right-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm p-1.5 ml-auto inline-flex items-center">
                <svg aria-hidden="true" class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
            </button>

            <div class="py-6 px-6 lg:px-8">
                <h3 class="mb-4 text-xl font-medium text-gray-900">Cập nhật điểm số</h3>

                <form asp-action="UpdateGrade" method="post">
                    <input type="hidden" id="modalEnrollmentId" name="enrollmentId" />

                    <div class="mb-6">
                        <p class="text-sm text-gray-500 mb-1">Sinh viên:</p>
                        <p id="modalStudentName" class="text-lg font-bold text-brand-blue">Nguyen Van A</p>
                    </div>

                    <div class="mb-6">
                        <label for="finalGrade" class="block mb-2 text-sm font-medium text-gray-900">Điểm tổng kết (0 - 10)</label>
                        <input type="number" name="finalGrade" id="modalFinalGrade"
                               step="0.1" min="0" max="10" placeholder="VD: 8.5"
                               class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" required>
                    </div>

                    <button type="submit" class="w-full text-white bg-brand-blue hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">Lưu điểm số</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    // Hàm mở Modal và điền dữ liệu
    function openGradeModal(id, name, currentGrade) {
        document.getElementById('modalEnrollmentId').value = id;
        document.getElementById('modalStudentName').innerText = name;
        document.getElementById('modalFinalGrade').value = currentGrade; // Giá trị này đã được format chuẩn dấu chấm từ Server

        // Hiển thị modal
        document.getElementById('gradeModal').classList.remove('hidden');
    }

    // Hàm đóng Modal
    function closeGradeModal() {
        document.getElementById('gradeModal').classList.add('hidden');
    }

    // Đóng modal khi click ra ngoài
    window.onclick = function(event) {
        var modal = document.getElementById('gradeModal');
        if (event.target == modal) {
            closeGradeModal();
        }
    }
</script>